<h1>All tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path( tag ),
        class: "tag_title", id: "tag_#{tag.id}" %>
      <% if logged_in %>
        <%= link_to "delete", tag_path( tag ), method: :delete, data: { confirm: "really delete this tag?" }%>
      <% end %>
    </li>
  <% end %>
</ul>
